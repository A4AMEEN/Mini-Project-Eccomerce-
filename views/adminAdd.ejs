  <script>
    function previewImages(event) {
    var preview = document.getElementById('imagePreview');
    preview.innerHTML = ''; // Clear previous previews
    
    var files = event.target.files;

    for (var i = 0; i < files.length; i++) {
        var file = files[i];
        var reader = new FileReader();

        reader.onload = function (e) {
            var image = new Image();
            image.src = e.target.result;

            var imgContainer = document.createElement('div');
            imgContainer.classList.add('image-container');

            var img = document.createElement('img');
            img.classList.add('preview-image');
            img.src = image.src;
            img.style.width = '150px'; // Set width (adjust as needed)
            img.style.height = '150px'; // Set height (adjust as needed)

            imgContainer.appendChild(img);
            preview.appendChild(imgContainer);
        }

        reader.readAsDataURL(file);
    }
}

  </script>

  <script>
    function validateForm() {
        var productName = document.getElementById("productName").value;
        var brand = document.getElementById("brand").value;
        var price = document.getElementById("price").value;
        var stocks = document.getElementById("stocks").value;
        var category = document.getElementById("catagory").value; // Corrected the ID here
        var productImage = document.getElementById("productImage").value; // Added this line

        var isValid = true;

        // Check if the product name is empty
        if (productName.trim() === "") {
            document.getElementById("productNameError").innerHTML = "Please enter a valid product name.";
            isValid = false;
        } else {
            document.getElementById("productNameError").innerHTML = ""; // Clear error message
        }

        // Check if the brand is empty
        if (brand.trim() === "") {
            document.getElementById("brandError").innerHTML = "Please enter a valid brand.";
            isValid = false;
        } else {
            document.getElementById("brandError").innerHTML = ""; // Clear error message
        }

        // Check if the price is empty or not a positive number
        if (price.trim() === "" || isNaN(price) || parseFloat(price) <= 0) {
            document.getElementById("priceError").innerHTML = "Please enter a valid price.";
            isValid = false;
        } else {
            document.getElementById("priceError").innerHTML = ""; // Clear error message
        }

        // Check if the stocks is empty or not a positive number
        if (stocks.trim() === "" || isNaN(stocks) || parseFloat(stocks) <= 0) {
            document.getElementById("stocksError").innerHTML = "Please enter a valid stock quantity.";
            isValid = false;
        } else {
            document.getElementById("stocksError").innerHTML = ""; // Clear error message
        }

        // Check if the category is selected
        if (category.trim() === "") {
            document.getElementById("categoryError").innerHTML = "Please select a category.";
            isValid = false;
        } else {
            document.getElementById("categoryError").innerHTML = ""; // Clear error message
        }

        // Check if the product image is selected
        if (productImage.trim() === "") {
            document.getElementById("imageError").innerHTML = "Please select a product image.";
            isValid = false;
        } else {
            document.getElementById("imageError").innerHTML = ""; // Clear error message
        }

        // If any field is not valid, prevent form submission
        if (!isValid) {
            return false;
        }

        return true; // Allow form submission
    }
</script>


    

 
