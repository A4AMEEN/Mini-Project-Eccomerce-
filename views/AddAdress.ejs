        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px 0;
    }

    .profile-container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-info {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .order-history table {
        width: 100%;
        border-collapse: collapse;
    }

    .order-history th,
    .order-history td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    .order-history th {
        background-color: #f2f2f2;
    }

    .order-history tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .order-history tr:hover {
        background-color: #ddd;
    }

    @media (max-width: 600px) {
        .profile-info,
        .order-history {
            text-align: left;
        }

        .profile-info {
            margin-bottom: 30px;
        }
    }

    .section {
        margin-bottom: 30px;
    }

    .address-list {
        max-width: 600px;
        margin: 10px auto;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .address-list p {
