        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px;
    }

    .address-card input {
        margin-right: 10px;
    }

    .address-details {
        flex-grow: 1;
    }

    .address-details div {
        margin-bottom: 5px;
    }
</style>
