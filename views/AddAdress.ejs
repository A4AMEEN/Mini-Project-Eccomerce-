  <main>
    <div class="container">
        <h1 class="mt-5">Add Address</h1>
        <form action="/addadress/<%= _id %>" method="POST" class="mt-4" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="state" class="form-label">State:</label>
                <input type="text" id="state" name="state" class="form-control">
                <div class="error-message" id="state-error"></div>
            </div>
    
            <div class="mb-3">
                <label for="district" class="form-label">District:</label>
                <input type="text" id="district" name="district" class="form-control">
                <div class="error-message" id="district-error"></div>
            </div>
    
            <div class="mb-3">
                <label for="address" class="form-label">Address:</label>
                <input type="text" id="address" name="address" class="form-control">
                <div class="error-message" id="address-error"></div>
            </div>
    
            <div class="mb-3">
                <label for="pincode" class="form-label">Pincode:</label>
                <input type="number" id="pincode" name="pincode" class="form-control" pattern="\d{6}" min="100000" max="999999">
                <div class="error-message" id="pincode-error"></div>
            </div>
    
            <button type="submit" class="btn btn-primary">Add Address</button>
        </form>
    </div>
    <script>
        function validateForm() {
            var state = document.getElementById("state").value;
            var district = document.getElementById("district").value;
            var address = document.getElementById("address").value;
            var pincode = document.getElementById("pincode").value;
    
            var stateError = document.getElementById("state-error");
            var districtError = document.getElementById("district-error");
            var addressError = document.getElementById("address-error");
            var pincodeError = document.getElementById("pincode-error");
    
            stateError.innerHTML = "";
            districtError.innerHTML = "";
            addressError.innerHTML = "";
            pincodeError.innerHTML = "";
    
            var isValid = true;
    
            if (state.trim() === "") {
                stateError.innerHTML = "Please enter the state.";
                isValid = false;
            }
    
            if (district.trim() === "") {
                districtError.innerHTML = "Please enter the district.";
                isValid = false;
            }
    
            if (address.trim() === "") {
                addressError.innerHTML = "Please enter the address.";
                isValid = false;
            }
    
            var pincodePattern = /^\d{6}$/;
            if (!pincodePattern.test(pincode)) {
                pincodeError.innerHTML = "Please enter a valid pincode (6 digits).";
                isValid = false;
            }
    
            return isValid;
        }
    </script>

