          <h2 class="addresses-heading mb-4">Addresses</h2>
          <a href="/addadress">
              <button class="btn btn-warning btn-sm position-fixed top-0 start-0 mt-3 ms-3" data-toggle="modal" data-target="#addressModal">
                  Add Address
              </button>
          </a>
          <div class="address-list">
              <ul class="list-group">
                  <% addresses.forEach(address => { %>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                          <div>
                              <span><strong><%= address.state %>, <%= address.district %> <%= address.address %></strong></span>
                              <br>
                              <span>Pincode <%= address.pincode %></span>
                          </div>
                          <div class="address-actions">
                            <a href="/editaddress/<%= address.id %>">
                                <button class="btn btn-primary btn-sm mr-2">Edit</button>
                            </a>
                            <form id="deleteForm_<%= address.id %>" action="/deleteaddress/<%= address.id %>" method="POST">
                              <button class="btn btn-primary btn-sm mr-2 delete-btn" data-id="<%= address.id %>">Delete</button>
                          </form>
                        </div>
                      </li>
                  <% }); %>
