  <div id="confirmationModal" class="modal">
    <div class="modal-content">
        <p>Are you sure you want to delete this address?</p>
        <div class="modal-buttons">
            <button id="confirmDelete" class="btn btn-primary">Yes</button>
            <button id="cancelDelete" class="btn btn-secondary">No</button>
        </div>
    </div>
</div>
<script>
  // Delete button click handling
  document.querySelectorAll(".delete-btn").forEach(button => {
      button.addEventListener("click", function(event) {
          event.preventDefault(); // Prevent default form submission

          const addressId = this.getAttribute("data-id");
          showConfirmationModal(addressId);
      });
  });

  // Show confirmation modal
  function showConfirmationModal(addressId) {
      const modal = document.getElementById("confirmationModal");
      modal.style.display = "block";

      // Handle confirmation on Yes button click
      document.getElementById("confirmDelete").addEventListener("click", function() {
          const deleteForm = document.getElementById(`deleteForm_${addressId}`);
          if (deleteForm) {
              deleteForm.submit(); // Submit the form
          }
          modal.style.display = "none"; // Hide the modal
      });

      // Handle cancellation on No button click
      document.getElementById("cancelDelete").addEventListener("click", function() {
          console.log("Deletion canceled.");
          modal.style.display = "none"; // Hide the modal
      });
  }
</script>
  
