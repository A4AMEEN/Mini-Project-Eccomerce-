  <main>
    <div class="container">
  <h1 class="mb-4">Orders</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Item ID</th>
        <th>UserName</th>
        <th>UserEmail</th>
        <th>Item</th>
        <th>Item Name</th>
        <th>Item Price</th>
        <th>Item Quantity</th>
        <th>Delivery Status</th>
      </tr>
    </thead>
    <tbody>
      <tbody>
        <% orders.reverse().forEach(order => { %>
            <% order.items.reverse().forEach(item => { %>
                <tr>
                  <td><%= order.id %></td>
                  <td>
                    <% if (order.userId) { %>
                      <%= order.userId.name %>
                    <% } else { %>
                      User Name Not Available
                    <% } %>
                  </td>
                  <td>
                    <% if (order.userId) { %>
                      <%= order.userId.email %>
                    <% } else { %>
                      Email Not Available
                    <% } %>
                  </td>
                  
                    <td>
                        <a href="/admin/detail/<%= item.productId %>" target="_blank">
                            <img src="/images/<%= item.images[0] %>" class="img-fluid" style="max-width: 80px;" alt="<%= item.productName %>">
                        </a>
                    </td>
                    <td><%= item.productName %></td>
                    <td>&#8377 <%= item.price * item.quantity %></td>
                    <td><%= item.quantity %></td>
                    <td>
                        <form action="/admin/update-status/<%= order._id %>" method="POST">
                            <input type="hidden" name="itemId" value="<%= item._id %>">
                            <% if (item.deliveryStatus === 'Delivered' || item.deliveryStatus === 'Returned' || item.deliveryStatus === 'Cancelled') { %>
                                <%= item.deliveryStatus %>
                            <% } else { %>
                                <select name="deliveryStatus" class="form-control">
                                    <option value="Pending" <%= (item.deliveryStatus === 'Pending') ? 'selected' : '' %>>Pending</option>
                                    <option value="Shipped" <%= (item.deliveryStatus === 'Shipped') ? 'selected' : '' %>>Shipped</option>
                                    <option value="Delivered" <%= (item.deliveryStatus === 'Delivered') ? 'selected' : '' %>>Delivered</option>
                                </select>
                                <button type="submit" class="btn btn-primary mt-2">Update</button>
                            <% } %>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% }) %>
    </tbody>
    
    
  </table>
