    <div class="container mt-5">
      <h2 class="text-center">Update Product</h2>
      <form id="updateForm" action="/admin/update/<%= product._id %>" enctype="multipart/form-data" method="post">
          <div class="form-group">
              <label for="productImage">Product Image:</label>
              <input min="4" multiple type="file" class="form-control-file" name="images" id="productImage" onchange="previewImages(event)">
              <div id="imageError" class="error-message"></div>
          </div>
          <div id="imagePreview"></div>
          <div class="product-images">
              <h3>Product Images:</h3>
              <div class="image-gallery">
                  <% product.images.forEach((image) => { %>
                      <img src="/images/<%= image %>" alt="Product Image" style="width: 125px; height: auto;">
                  <% }); %>
              </div>
          </div>
          <div id="displayImages"></div>
  
          <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>">
              <div id="nameError" class="error"></div>
          </div>
  
          <div class="form-group">
            <!-- Assuming 'brands' is an array of objects with 'brandName' and '_id' properties -->
            <label for="brand">Select Brand:</label>
            <select class="form-control" value = "<%= product.brand %>" name="brand" id="brand" >
                <option value="<%= product.brand %>">Select a brand(<%= product.brand %>)</option>
                <% brands.forEach(brand => { %>
                    <option value="<%= brand.brandName %>"><%= brand.brandName %></option>
                <% }); %>
            </select>
            <div id="brandError" class="error-message"></div>
        </div>
  
          <div class="form-group">
              <label for="price">Price</label>
              <input type="number" min="0" class="form-control" id="price" name="price" value="<%= product.price %>">
              <div id="priceError" class="error"></div>
          </div>
  
          <div class="form-group">
              <label for="offer">Offer(optional):</label>
              <input min="0" type="number" class="form-control" name="offer" id="offer" value="<%= product.offer %>">
              <div id="offerError" class="error-message"></div>
          </div>
  
          <div class="form-group">
              <label for="discount">Discount</label>
              <input min="0" type="number" class="form-control" name="discount" id="discount" value="<%= product.discount %>" disabled>
              <div id="discountError" class="error-message"></div>
          </div>
  
          <div class="form-group">
            <label for="stocks">Stocks</label>
            <input type="number" class="form-control" min="1" id="stocks" name="stocks" value="<%= product.stocks %>">
            <div id="stocksError" class="error"></div>
        </div>
        
  
          <div class="form-group">
              <label for="category">Category</label>
              <input type="hidden" class="form-control" id="categorySelect" name="categorySelect" value="<%= product.category %>" disabled>
              <div id="categoryError" class="error"></div>
          </div>
  
          <div class="form-group">
              <label for="updateCategory">Update Category:</label>
              <select name="category" id="updateCategory" class="form-control">
                  <% categories.forEach((category) => { %>
                      <option value="<%= category.name %>"><%= category.name %></option>
                  <% }); %>
              </select>
              <div id="updateCategoryError" class="error"></div>
          </div>
  
          <button type="submit" class="btn btn-primary">Update Product</button>
      </form>
  </div>
