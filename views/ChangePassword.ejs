  <main>
	<div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <form action="/changepassword" method="post" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="oldPassword">Old Password:</label>
                    <input type="password" class="form-control" name="oldPassword" id="oldPassword">
                    <p id="oldPasswordError" class="error" style="display: none;">Old password is incorrect</p>
                </div>
                <div class="form-group">
                    <label for="newPassword">New Password:</label>
                    <input type="password" class="form-control" name="newPassword" id="newPassword">
                    <p id="newPasswordError" class="error" style="display: none;">Please enter a new password</p>
                </div>
                <button type="submit" class="btn btn-primary">Change Password</button>
                <% if (typeof message !== 'undefined' && message !== 'Old password incorrect') { %>
                    <p class="error-message"><%= message %></p>
                <% } %>
            </form>
        </div>
        
        <script>
          function validateForm() {
              var oldPassword = document.getElementById('oldPassword').value;
              var newPassword = document.getElementById('newPassword').value.trim(); // Trim leading and trailing spaces
              var oldPasswordError = document.getElementById('oldPasswordError');
              var newPasswordError = document.getElementById('newPasswordError');
              var isValid = true;
      
              // Check if old password is empty
              if (oldPassword === '') {
                  oldPasswordError.style.display = 'block';
                  isValid = false;
              } else {
                  oldPasswordError.style.display = 'none';
              }
      
              // Check if new password is empty or contains only spaces
              if (newPassword === '' || newPassword.indexOf(' ') !== -1) {
                  newPasswordError.style.display = 'block';
                  isValid = false;
              } else {
                  newPasswordError.style.display = 'none';
              }
      
              return isValid;
          }
      </script>
      
