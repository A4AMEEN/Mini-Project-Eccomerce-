  <main>
    <style>
        /* Add some custom styling for the category list */
        #categoryList {
            list-style: none;
            padding: 0;
        }

        .category-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
    <style>
        /* Style for the button */
        button {
          background-color: #3498db; /* Set background color */
          color: white; /* Set text color */
          padding: 10px 20px; /* Set padding */
          border: none; /* Remove border */
          border-radius: 4px; /* Add border radius */
          cursor: pointer; /* Add cursor pointer */
          transition: background-color 0.3s ease; /* Add smooth transition */
        }
      
        /* Change button color on hover */
        button:hover {
          background-color: #2980b9; /* Change background color on hover */
        }
      </style>
      
    <a href="adminCatagory"><button>Back</button></a>
   <h1>Add Category</h1>
   <form action="categories" method="POST" onsubmit="return validateForm()">
    <label for="categoryName">Category Name:</label>
    <input type="text" id="categoryName" name="name">
    <p style="color: red;"><%= error %></p>
    <p><span id="error" style="color: red;"></span></p>
    <br>
    <button type="submit">Add Category</button>
  </form>
  
  <script>
    function validateForm() {
      var categoryName = document.getElementById('categoryName').value;
      var errorElement = document.getElementById('error');
      
      if (categoryName.trim() === '') {
        errorElement.innerHTML = 'Please enter a valid category name.';
        return false;
      } else {
        errorElement.innerHTML = ''; // Clear any previous error messages
        return true; // Allow form submission
      }
    }
  </script>
  
    

  <script src="app.js"></script>
