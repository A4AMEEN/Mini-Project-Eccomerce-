<body>
<h1>Wallet Transaction History</h1>

<% if (transactions.length > 0) { %>
    <table>
        <tr>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
        


<% transactions.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(transaction => { %>
    <tr>
        <td><%= transaction.type %></td>
        <td class="<%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
            <% if (transaction.type === 'credit') { %>
                +<%= transaction.amount %>₹
            <% } else { %>
                -<%= transaction.amount %>₹
            <% } %>
        </td>
        <td><%= transaction.description %></td>
        <td><%= moment(transaction.date).format('YYYY-MM-DD') %></td>
        <td><%= moment(transaction.date).format('HH:mm:ss') %></td>
    </tr>
<% }); %>

    </table>
    <style>
      .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
      }
    
      .pagination a {
        display: inline-block;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: 1px solid #ccc;
        text-align: center;
        line-height: 30px;
        margin: 0 5px;
        text-decoration: none;
      }
    
      .pagination a.active {
        background-color: #007bff;
        color: #fff;
      }
    </style>
    
    <div class="pagination">
      <% for(let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="<%= currentPage == i ? 'active' : '' %>">
              <%= i %>
          </a>
      <% } %>
    </div>
    
<% } else { %>
    <p>No transactions found.</p>
<% } %>

</main>



