  <main>
    <h1>All Users Order History</h1>

<%
    // Sort allUsersOrderHistory based on orderDate in descending order
    allUsersOrderHistory.sort((a, b) => new Date(b.orderDate) - new Date(a.orderDate));
    
    allUsersOrderHistory.forEach(order => {
%>
    <!-- Display order details for each user -->
    
    <h2>User: <% if (order.userId) { %>
      <%= order.userId.name %>
    <% } else { %>
      User Name Not Available
    <% } %></h2>

    <table>
        <thead>
            <tr>
                <th>User & Email & Order Date & Time </th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            <% order.items.forEach(item => { %>
                <tr>
                    <td>
                      <% if (order.userId) { %>
                        <%= order.userId.name %>
                      <% } else { %>
                        User Name Not Available
                      <% } %>
                      <% if (order.userId) { %>
                        <%= order.userId.email %>
                      <% } else { %>
                        User Email Not Available
                      <% } %>
                        <p><%= order.orderDate %></p>
                    </td>
                    
                    <td><%= item.productName %></td>
                    <td>$<%= item.price %></td>
                    <td>
                            <a href="/admin/detail/<%= item.productId %>" target="_blank">
                                <img src="/images/<%= item.images[0] %>" class="img-fluid" style="max-width: 80px;" alt="<%= item.productName %>">
                            </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <hr>
<%
    });
%>
